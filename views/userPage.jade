doctype html
html
  head
    title #{username} - Appa Lounge
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='https://code.jquery.com/jquery-2.1.4.min.js')
    script(src='/js/common.js')
    script(src='/js/userPage.js')
    link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/flatly/bootstrap.min.css", rel="stylesheet")
  body
    div
        .navbar-wrapper
          .container
            nav.navbar.navbar-inverse.navbar-static-top
              .container
                .navbar-header
                  button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                  a.navbar-brand(href='/')
                    p Appa Lounge
                #navbar.navbar-collapse.collapse
                  ul.nav.navbar-nav
                    li
                      a(href='/') Home
                    li.active
                      a(href='/users') Members
                    li
                      a(href='/gallery') Gallery
                    li
                      a(href='/events') Events
                    li
                      a(href='/chat') Chat
                    li
                      a(href='/files') Files
                    li
                      a(href='/', id='loginlogout')
        .container.marketing
          h2#title.needs-margin(style="width:100%;text-align:center")
            div(id="userPicture")
            p(id="fullName")
            span.text-muted
          h3#subtitle.text-muted(style="width:100%;text-align:center")
            p(id="username")
          .container(id="userData", style="text-align:center; font-size: 18px; width: 100%")
          div(id='footerMessage')
          hr.featurette-divider
          // FOOTER
          footer
            p.pull-right
              a(href='#') Back to top
            p
              | © 2015 Appa Lounge · 
              a(href='privacy.html') Privacy
              |  · 
              a(href='terms.html') Terms
