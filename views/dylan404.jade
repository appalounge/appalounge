doctype html
html
  head
    title #{username} - Appa Lounge
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='https://code.jquery.com/jquery-2.1.4.min.js')
    script(src='/js/common.js')
    script(src='/js/retainLogin.js')
    link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/flatly/bootstrap.min.css", rel="stylesheet")
  body
    div
        .navbar-wrapper
          .container
            nav.navbar.navbar-inverse.navbar-static-top
              .container
                .navbar-header
                  button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                  a.navbar-brand(href='/', class='retainLogin')
                    p Appa Lounge
                #navbar.navbar-collapse.collapse
                  ul.nav.navbar-nav
                    li
                      a(href='/', class='retainLogin') Home
                    li
                      a(href='/users', class='retainLogin') Members
                    li
                      a(href='/gallery', class='retainLogin') Gallery
                    li
                      a(href='/events', class='retainLogin') Events
                    li
                      a(href='/chat', class='retainLogin') Chat
                    li
                      a(href='/files', class='retainLogin') Files
                    li
                      a(href='/', id='loginlogout')
        .container.marketing
          hr.featurette-divider
          block content
            div(style="width:100%;text-align:center")
              h1 We couldn't complete your request :(
              h2= quote
              img(src="#{image}", style="width: 40%; height: 40%; margin: auto auto; margin-top: 16px;")
          hr.featurette-divider
          // FOOTER
          footer
            p.pull-right
              a(href='#') Back to top
            p
              | © 2015 Appa Lounge · 
              a(href='privacy.html', class='retainLogin') Privacy
              |  · 
              a(href='terms.html', class='retainLogin') Terms
